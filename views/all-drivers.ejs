<html lang="en">
  <%- include('./partials/head.ejs')%>
  <body>
    <%- include('./partials/nav.ejs')%>
    <h1>2021 F1 Drivers</h1>
    <div id="drivers">
      <%if (driversData.length>0){ %> <% driversData.forEach(driver=>{%>
      <div class="driver">
        <img
          class="image"
          src="./Images/<%= driver.driverNumber %>.png "
          alt=""
        />
        <h3 class="driverName"><%= driver.driverName %></h3>
        <button class="moreInfo"><a href="/driver">More</a></button>
      </div>
      <% }) %> <% } %>
    </div>
  </body>
</html>
